@model EntityLayer.Entities.RoomType
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h1 class="bg-success text-white text-center border my-5 shadow">Yeni Kayıt</h1>
<div class="row">
    <div class="col-md-6 offset-md-1 border p-3 shadow">

        <form action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <label for="text" class="col-4 col-form-label">Oda Tipi</label>
                <div class="col-8">
                    <input id="text" asp-for="RoomName" type="text" class="form-control border shadow">
                    <span asp-validation-for="RoomName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label for="text1" class="col-4 col-form-label">Oda Fiyatı</label>
                <div class="col-8">
                    <input id="text1" asp-for="RoomPrice" type="text" class="form-control border shadow">
                    <span asp-validation-for="RoomPrice" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-4 col-8">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </div>
        </form>


    </div>
</div>


