@model EntityLayer.Entities.RoomType
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h1 class="bg-success text-white text-center border my-5 shadow">Silme</h1>
<div class="row">
    <div class="col-md-6 offset-md-1 border p-3 shadow">

        <form action="Delete" method="post">
           
            <div class="form-group row">
                <input type="hidden" asp-for="RoomTypeId" />
                <label for="text" class="col-4 col-form-label">Oda Tipi</label>
                <div class="col-8">
                    <input id="text" asp-for="RoomName" disabled type="text" class="form-control border shadow">
                  
                </div>
            </div>
            <div class="form-group row">
                <label for="text1" class="col-4 col-form-label">Oda Fiyatı</label>
                <div class="col-4">
                    <input id="text1" asp-for="RoomPrice" disabled type="text" class="form-control border shadow">
                    
                </div>

                <div class="col-2">
                    <button type="submit" class="btn btn-danger">Silme</button>
                </div>

                <div class="col-2">
                    <a asp-action="Index" class="btn btn-primary">İptal</a>
                </div>
            </div>
        
        </form>


    </div>
</div>






